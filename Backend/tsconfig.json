{
  "compilerOptions": {
    "target": "es2017",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "NodeNext", // or "nodenext" if you want to use top-level await
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"], // Remove "src/types" from here
    "strictFunctionTypes": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
